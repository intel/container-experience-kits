apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: xpumanager-prometheus
  namespace: "{{ xpumanager_namespace }}"
rules:
- apiGroups: [""]
  resources:
  - nodes
  - nodes/metrics
  - services
  - endpoints
  - pods
  verbs: ["get", "list", "watch"]
- apiGroups: [""]
  resources:
  - configmaps
  verbs: ["get"]
- apiGroups:
  - networking.k8s.io
  resources:
  - ingresses
  verbs: ["get", "list", "watch"]
